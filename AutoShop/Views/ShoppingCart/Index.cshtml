@model AutoShop.ViewModels.ShoppingCartViewModel

<h2>Shopping Cart: All your auto parts</h2>
<table class="table table-bordered table-striped">
    <thread>
        <tr>
            <th>Selected Amount</th>
            <th>Auto Parts</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thread>
    <tbody>
        @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-center">@item.Amount</td>
                    <td class="text-center">@item.AutoPart.Name</td>
                    <td class="text-center">@item.AutoPart.Price.ToString("c")</td>
                    <td class="text-right">
                        @((item.Amount * item.AutoPart.Price).ToString("c"))
                    </td>
                </tr>
            }
    </tbody>
    <tfoot>
        <td colspan="3" class="text-right">Total</td>
        <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
    </tfoot>
</table> 
